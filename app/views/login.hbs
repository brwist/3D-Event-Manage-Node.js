<div class="container-fluid fill">
    <div class="logo">
        <img src="{{loginLogo}}" class="logo-dimension" />
    </div>
    <div class="row">
        <div class="col container-fluid" style="padding: 0;">
            <img src="{{loginBackground}}" class="login-image" />
        </div>
        <div class="col">
            <div class="d-flex flex-column justify-content-center min-vh-100 login-content">
                <h1 class="text-center text-uppercase">{{loginPrompt}}</h1>
                <form class="mt-5" action="{{loginPath}}" method="post">
                    <div class="form-group w-100">
                        <input type="email" class="form-control mt-5 blue-border" placeholder="name" name="username"
                            style="border:2px solid #0a33a0;"></input>
                        <input type="password" class="form-control mt-4" placeholder="password" name="password"
                            style="border:2px solid #0a33a0;"></input>
                    </div>
                    <input type="submit" value="login" class="btn btn-primary w-100 mt-4"
                        style="background: #0a33a0;"></input>
                </form>
            </div>
        </div>
    </div>
</div>

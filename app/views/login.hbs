<style>
    .custom-background-color {
        background-color: {{stylingColor}};
    }
    .custom-border-color {
        border-color: {{stylingColor}};
    }
</style>
<div class="container-fluid fill">
    <div class="logo">
        <img src="{{loginLogo}}" class="logo-dimension" />
    </div>
    <div class="row">
        <div class="col container-fluid no-padding custom-background-color">
        </div>
        <div class="col">
            <div class="d-flex flex-column justify-content-center min-vh-100 login-content">
                <h1 class="text-center text-uppercase">{{loginPrompt}}</h1>
                <form class="mt-5" action="{{loginPath}}" method="post">
                    <div class="form-group w-100">
                        <input type="email" class="form-control mt-5 login-input custom-border-color" placeholder="name"
                            name="username"></input>
                        <input type="password" class="form-control mt-4 login-input custom-border-color" placeholder="password"
                            name="password"></input>
                    </div>
                    <input type="submit" value="login" class="btn btn-primary w-100 mt-4 custom-background-color"></input>
                </form>
            </div>
        </div>
    </div>
</div>
